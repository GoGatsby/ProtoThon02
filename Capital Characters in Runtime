import keyboard  
import time
s="abcdefghijklmnopqrstuvwxyz"
l=[]

for i in s:
    l.append(i)
while True: 
    try:
      for i in l:
        if keyboard.is_pressed(i):  
            print(i.upper(),end='')
            time.sleep(0.15)
            continue
      
        else:
            pass
    except:
        break  
